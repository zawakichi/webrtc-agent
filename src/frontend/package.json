{
  "name": "webrtc-system-consultation-agent",
  "version": "0.1.0",
  "description": "WebRTC-based AI agent for system development consultation",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "vite --mode development",
    "dev:backend": "cd ../backend && air",
    "build": "bun run build:frontend && bun run build:backend",
    "build:frontend": "vite build",
    "build:backend": "cd ../backend && go build -o ../../dist/backend/webrtc-agent cmd/webrtc-agent/main.go",
    "preview": "vite preview",
    "test": "bun run test:unit && bun run test:integration",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:integration": "cd ../backend && go test -v ./...",
    "test:e2e": "playwright test --config=tests/e2e/playwright.config.ts",
    "test:bdd": "jest --config=tests/bdd/jest.config.js",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "type-check": "tsc --noEmit",
    "db:migrate": "cd ../backend && go run scripts/migrate.go",
    "db:seed": "cd ../backend && go run scripts/seed.go",
    "db:reset": "bun run db:migrate && bun run db:seed",
    "db:setup:test": "NODE_ENV=test bun run db:migrate && NODE_ENV=test bun run db:seed",
    "db:clean:test": "cd ../backend && NODE_ENV=test go run scripts/clean.go",
    "start": "./dist/backend/webrtc-agent",
    "start:prod": "NODE_ENV=production ./dist/backend/webrtc-agent",
    "docker:build": "docker build -f environment/docker/Dockerfile -t webrtc-agent .",
    "docker:dev": "docker-compose -f ../../environment/docker/docker-compose.dev.yml up -d",
    "docker:dev:logs": "docker-compose -f ../../environment/docker/docker-compose.dev.yml logs -f",
    "docker:dev:down": "docker-compose -f ../../environment/docker/docker-compose.dev.yml down",
    "docs:serve": "mkdocs serve --dev-addr=0.0.0.0:8000",
    "docs:build": "mkdocs build",
    "docker:prod": "docker-compose -f environment/docker/docker-compose.prod.yml up -d",
    "test:reports:generate": "tsx scripts/generate-test-reports.ts"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@nestjs/common": "^10.2.10",
    "@nestjs/core": "^10.2.10",
    "@nestjs/platform-express": "^10.2.10",
    "@nestjs/platform-socket.io": "^10.2.10",
    "@nestjs/websockets": "^10.2.10",
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "ws": "^8.14.2",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@types/simple-peer": "^9.11.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^0.34.6",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jest": "^29.7.0",
    "jest-cucumber": "^3.0.1",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.0.0",
  "keywords": [
    "webrtc",
    "ai",
    "consultation",
    "system-development",
    "realtime-api",
    "google-meet",
    "typescript",
    "react",
    "nodejs"
  ],
  "author": "WebRTC Agent Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zawakichi/webrtc-agent.git"
  },
  "bugs": {
    "url": "https://github.com/zawakichi/webrtc-agent/issues"
  },
  "homepage": "https://github.com/zawakichi/webrtc-agent#readme"
}